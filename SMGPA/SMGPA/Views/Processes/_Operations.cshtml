@model IEnumerable<SMGPA.Models.Operation>
@{
    Layout = null;
}
<div class="modal-header">
    <div id="alertdelete" class="alert alert-danger" role="alert" hidden="hidden">
        
        <p>¿Seguro que quieres Eliminar esto?</p>
       <button id="cancelButton">Cancelar</button>
       <button id="confirmButton" class="pull-right">Aceptar</button>
    </div>
    <div id="alertdeleted" class="alert alert-danger" role="alert" hidden="hidden">
        Operación ha sido Eliminada
     </div>
    <div id="alertpredecesora" class="alert alert-warning" role="alert" hidden="hidden">
        Operación es predecesora de otra, no se puede eliminar!
    </div>
    <h4 class="modal-title" id="myModalLabel">Operaciones de @ViewBag.Process</h4>
</div>
<div class="modal-body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predecesora)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Predecesora.Nombre)
                </td>
                <td>
                    <a class="btn btn-default btn-xs" href="@Url.Action("EditOperation", new { id = item.idOperation})">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a id="deleteOperation" url="/Processes/DeleteOperation/" value="@item.idOperation">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }

    </table>

</div>
