@model IEnumerable<SMGPA.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<h2>Roles de Administrador</h2>

<p>
    <a class="btn btn-default btn-sm" href="@Url.Action("Create","Roles")">
        <span>Nuevo Rol</span>
    </a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Permisos", "Permissions", new { id = item.idRole }, new { data_modal = "", @class="permissions btn btn-info btn-sm" })
            <a class="btn btn-default btn-sm" href="@Url.Action("Edit","Roles", new {id = item.idRole})">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a class="btn btn-default btn-sm" href="@Url.Action("Details","Roles", new {id = item.idRole})">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>
            <a class="btn btn-default btn-sm" href="@Url.Action("Delete","Roles", new {id = item.idRole})">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
    @Scripts.Render("~/bundles/dynamics")
}