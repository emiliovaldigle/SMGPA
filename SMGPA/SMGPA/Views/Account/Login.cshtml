@model SMGPA.Models.Functionary

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/Content/bootstrap.css" rel="stylesheet">
    <link href="/Content/login.css" rel="stylesheet">
</head>
<body>
    <div class="row">
        <div class="container">
            <header>
                <h3>Iniciar Sesión</h3>
                <p>Para acceder a SMGPA debe iniciar sesión</p>
            </header>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.MailInstitucional, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo institucional" } })
                            @Html.ValidationMessageFor(model => model.MailInstitucional, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña" } })
                            @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                    <div class="form-group col-md-12">
                        <div>
                            <a class="btn btn-default" href="~/Account/Register" title="Registrarse">
                                Registrarse
                            </a>
                            <input type="submit" value="Enviar" class="btn btn-primary pull-right" />
                        </div>
                    </div>
            }
            <label class="error">@ViewBag.validation</label>
            <div class="troubles">
                <a href="#">¿Olvidaste tu contraseña?</a>
            </div>
        </div>
    </div>

</body>

</html>
