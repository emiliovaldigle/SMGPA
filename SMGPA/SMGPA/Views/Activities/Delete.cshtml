}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Activities")">Actividades</a></li>
    <li class="active">Eliminar</li>
</ol>
<h2>Eliminar</h2>

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>
    <h4>Actividad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Proceso.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Proceso.Descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Carrera.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Carrera.Nombre)
        </dd>
        <dt>
            @Html.DisplayName("Fecha de inicio")
