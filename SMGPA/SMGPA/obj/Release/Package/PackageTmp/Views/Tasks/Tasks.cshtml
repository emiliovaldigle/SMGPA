@model IEnumerable<SMGPA.Models.Tasks>

@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mis Tareas</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Operacion.Nombre)
        </th>
        <th>
            @Html.DisplayName("Fecha de inicio")
        </th>
        <th>
            @Html.DisplayName("Fecha de Fin")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Operacion.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.idTask }) 
        </td>
    </tr>
}

</table>
