<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SMGPA</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/public/bundles/scss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px !important;">
        @if (Session["UserID"] != null)
        {
        <a href="@Url.Action("LogOut", "Account")"  class="btn btn-danger btn-md pull-right">
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> 
        </a>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-lg-2">
            <nav class="navbar navbar-inverse navbar-fixed-side" style="padding-left:10px !important;">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                           <span class="glyphicon glyphicon-list"></span>
                        </button>
                        @Html.ActionLink("SMGPA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style="color:white !important;"})
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                              @if(Session["Admin"]!= null)
                              {
                                  Html.RenderAction("BuildMenu", "Account");
                              }
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Modelamiento y Gestión de procesos académicos</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
