@model IEnumerable<SMGPA.Models.Tasks>

@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<h2>Tareas de Actividad @ViewBag.Actividad</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Operacion.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Operacion.Descripcion)
        </th>
        <th>
            @Html.DisplayName("Fecha de inicio")
        </th>
        <th>
            @Html.DisplayName("Fecha de fin")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Operacion.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Operacion.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
           @Html.ActionLink("Configurar", "ConfigureTask", new { id = item.idTask }, new { @class = "btn btn-primary btn-sm", data_modal = "" })
        </td>
        <td>
            @Html.ActionLink("Detalle", "DetailsTask", new { id = item.idTask }, new { @class = "btn btn-info btn-sm", data_modal = "" })
        </td>
    </tr>
}

</table>

@section Scripts {
    @Scripts.Render("~/bundles/modalform")
}