@model SMGPA.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
<h2>Restablecer contraseña</h2>
    if (ViewBag.MensajeRestablecido == null)
    {
    <p>Porfavor ingresar nueva contraseña</p>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
               @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo institucional" } })
               @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
           <input type="submit" value="Enviar" class="btn btn-primary pull-right" />
        </div>
    </div>
        }
    }
@if (ViewBag.MensajeRestablecido != null)
{
    <div class="col-md-10">
        <p>@ViewBag.MensajeRestablecido</p>
        @Html.ActionLink("Iniciar sesión","Login","Account")
    </div>
}