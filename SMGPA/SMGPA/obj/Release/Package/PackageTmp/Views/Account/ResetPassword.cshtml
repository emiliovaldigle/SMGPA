@model SMGPA.Models.User
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
<h2>Restablecer contraseña</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
               @Html.EditorFor(model => model.MailInstitucional, new { htmlAttributes = new { @class = "form-control", placeholder = "Correo institucional" } })
               @Html.ValidationMessageFor(model => model.MailInstitucional, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn btn-default" />
        </div>
    </div>
}
@if (ViewBag.Mensaje != null)
{
    <div class="col-md-10">
        <p>@ViewBag.Mensaje</p>
    </div>
}